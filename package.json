{
  "name": "m0-ticker-redux",
  "version": "2.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "verify:structure": "node tools/verify-structure.mjs",
    "verify:system": "node tools/verify-system.mjs",
    "clean": "rm -rf dist coverage storybook-static",
    "dev": "vite",
    "build": "vite build",
    "build:staging": "tsc && vite build --mode staging",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:e2e": "playwright test",
    "test:performance": "vitest run tests/unit/Performance.test.tsx",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:a11y": "axe --include-tags wcag2a,wcag2aa",
    "analyze-bundle": "vite-bundle-analyzer dist/stats.json",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:css:fix": "stylelint 'src/**/*.css' --fix",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "size": "bundlesize",
    "dev:full": "npm run dev"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.1",
    "express": "^5.1.0",
    "gsap": "^3.12.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.27.0",
    "react-hook-form": "^7.45.4",
    "recharts": "^2.8.0",
    "zod": "^3.22.2",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.7.0",
    "@storybook/addon-a11y": "^8.1.0",
    "@storybook/addon-essentials": "^8.1.0",
    "@storybook/addon-viewport": "^8.1.0",
    "@storybook/addon-interactions": "^8.1.0",
    "@storybook/addon-docs": "^8.1.0",
    "@storybook/addon-controls": "^8.1.0",
    "@storybook/react-vite": "^8.1.0",
    "storybook": "^8.1.0",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^24.6.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^0.34.0",
    "@vitest/ui": "^0.34.0",
    "bundlesize": "^0.18.1",
    "concurrently": "^9.2.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jsdom": "^22.1.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "typescript": "^5.9.3",
    "vite": "^4.4.5",
    "vitest": "^0.34.0",
    "ws": "^8.14.0"
  },
  "bundlesize": [
    {
      "path": "./dist/assets/*.js",
      "maxSize": "250kb"
    }
  ]
}
